                        <input type="checkbox" onChange="this.form.submit()" name="check_box" value="<%= item._id %>">
                        <p>
                            <%= item.name %>
                        </p>
                    </div>
                    <input type="hidden" name="hidden" value="<%= list_title %>">
                </form>
                <% }); %>

